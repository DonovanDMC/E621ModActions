{
  "extends": "@uwu-codes/tsconfig/esm",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": false
  },
  "include": ["lib/**/*", "test/**/*", "local/**/*"],
  "exclude": ["node_modules", "dist"]
}
